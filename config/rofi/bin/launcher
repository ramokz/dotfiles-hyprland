#!/usr/bin/env bash
killall rofi || \
rofi \
	-show drun \
	-modi drun,ssh \
	-scroll-method 1 \
    -drun-match-fields all \
	-drun-display-format "{name}" \
	-no-drun-show-actions \
	-terminal kitty \
	-theme "$HOME"/.config/rofi/config/launcher.rasi

##################################################################################
# Based on Deathemonic - https://github.com/catppuccin/rofi/tree/main/deathemonic
##################################################################################